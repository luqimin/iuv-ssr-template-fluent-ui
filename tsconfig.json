{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "lib": [
      "dom",
      "esnext"
    ],
    "allowJs": true,
    "jsx": "react",
    "strict": true,
    "noImplicitAny": false,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "charset": "utf8",
    "pretty": true,
    "noEmitOnError": false,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "allowUnreachableCode": false,
    "allowUnusedLabels": false,
    "strictPropertyInitialization": false,
    "noFallthroughCasesInSwitch": true,
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "importHelpers": true,
    "downlevelIteration": true,
    "declaration": false,
    "sourceMap": true,
    "outDir": "./build",
    "rootDir": "./",
    "removeComments": false,
    "baseUrl": "./",
    "paths": {
      "@utils*": ["client/utils*"],
      "@const*": ["client/const*"],
      "@store*": ["client/store*"],
      "@routes*": ["client/routes*"],
      "@layout*": ["client/layout*"],
      "@assets*": ["client/assets*"],
      "@component*": ["client/component*"],
      "@common*": ["client/common*"],
      "@extra*": ["client/extra*"],
      "@style*": ["client/style*"]
    }
  },
  "include": [
    "index.d.ts",
    "typings/*.d.ts",
    "server/**/*.ts",
    "server/**/*.d.ts",
    "client/**/*.ts",
    "client/**/*.tsx"
  ],
  "exclude": [
    "node_modules",
    "build",
    "server/app/public",
    "server/app/views"
  ]
}